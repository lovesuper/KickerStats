<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="su.scraplesh.kickerstats.FieldFragment"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <Button
            android:id="@+id/button_red_goalkeeper"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/button_red_goalkeeper_selector"
            android:text="@string/goalkeeper"
            android:textColor="@android:color/black"
            android:textAllCaps="true"
            />

        <Button
            android:id="@+id/button_red_forward"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/button_red_forward_selector"
            android:text="@string/forward"
            android:textColor="@android:color/black"
            android:textAllCaps="true"
            />

        <Button
            android:id="@+id/button_blue_forward"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/button_blue_forward_selector"
            android:text="@string/forward"
            android:textColor="@android:color/black"
            android:textAllCaps="true"
            />

        <Button
            android:id="@+id/button_blue_goalkeeper"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/button_blue_goalkeeper_selector"
            android:text="@string/goalkeeper"
            android:textColor="@android:color/black"
            android:textAllCaps="true"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/text_red_goals"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="7"
            android:textSize="64sp"
            android:textColor="@android:color/secondary_text_light"
            />

        <TextView
            android:id="@+id/text_blue_goals"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="3"
            android:textSize="64sp"
            android:textColor="@android:color/secondary_text_light"
            />

    </LinearLayout>

</FrameLayout>
