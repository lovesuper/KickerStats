<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        tools:ignore="UselessParent"
        >

        <LinearLayout
            android:id="@+id/container_end_game"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_game_ended"
                android:layout_gravity="center"
                tools:ignore="ContentDescription"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_gravity="center"
                android:paddingTop="10dp"
                android:text="@string/game_ended"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="30dp"
                >

                <TextView
                    android:id="@+id/text_red_goals"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red_goalkeeper_background"
                    android:textSize="64sp"
                    android:text="5"
                    tools:ignore="HardcodedText"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textSize="64sp"
                    tools:ignore="HardcodedText"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingEnd="5dp"
                    />

                <TextView
                    android:id="@+id/text_blue_goals"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue_goalkeeper_background"
                    android:textSize="64sp"
                    android:text="10"
                    tools:ignore="HardcodedText"
                    />

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/button_start_game"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:text="@string/start_game"
            android:textSize="24sp"
            android:layout_gravity="center"
            android:background="@drawable/button_start_game_selector"
            />

    </LinearLayout>


</FrameLayout>
